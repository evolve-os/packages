<!DOCTYPE PISI SYSTEM "https://evolve-os.com/standard/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>gdl</Name>
        <Homepage></Homepage>
        <Packager>
            <Name>Peter Cornelis</Name>
            <Email>poltertec@gmail.com</Email>
        </Packager>
<Summary>GNOME Devtools Library</Summary>
        <Description>Provides a docking system and several utilities useful to GNOME development tools and GNOME applications in general. Used with inkscape, anjuta, etc</Description>
        <License>GPLv2+</License>
        <Archive sha1sum="7342f127c64e298cd33d90e661d34ecab842e92f" type="tarxz">http://ftp.gnome.org/pub/GNOME/sources/gdl/3.10/gdl-3.10.0.tar.xz</Archive>

        <BuildDependencies>
		<Dependency type="pkgconfig">gtk+-3.0</Dependency>
            	<Dependency type="pkgconfig">cairo</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>gdl</Name>
        <Files>
		<Path fileType="library">/usr/lib</Path>
		<Path fileType="doc">/usr/share/doc</Path>
		<Path fileType="localedata">/usr/share/locale</Path>
		<Path fileType="data">/usr/share/gdl</Path>
        </Files>
    </Package>

    <Package>
        <Name>gdl-devel</Name>
        <Summary>Development files for gdl</Summary>
        <RuntimeDependencies>
		<Dependency type="pkgconfig">gtk+-3.0</Dependency>
		<Dependency release="current">gdl</Dependency>
        </RuntimeDependencies>
        <Files>
		<Path fileType="header">/usr/include</Path>
		<Path fileType="library">/usr/lib/pkgconfig</Path>
		<Path fileType="data">/usr/share/gir-1.0</Path>
        </Files>
    </Package>

    <Package>
        <Name>gdl-docs</Name>
        <Summary>gdl reference documents</Summary>
        <Files>
            <Path fileType="data">/usr/share/gtk-doc</Path>
        </Files>
    </Package>

    <History>
        <Update release="1">
            <Date>10-27-2014</Date>
            <Version>3.10.0</Version>
            <Comment>Add gdl to repositories</Comment>
            <Name>Peter Cornelis</Name>
            <Email>poltertec@gmail.com</Email>
        </Update>
    </History>
</PISI>
