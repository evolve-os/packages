<?xml version="1.0" ?>
<!DOCTYPE PISI SYSTEM "https://evolve-os.com/standard/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>poppler</Name>
        <Homepage>http://poppler.freedesktop.org/</Homepage>
        <Packager>
            <Name>Ikey Doherty</Name>
            <Email>ikey@evolve-os.com</Email>
        </Packager>
        <Summary>PDF Rendering Library</Summary>
        <Description>PDF Rendering Library</Description>
        <License>GPLv2+</License>
        <Archive sha1sum="12937666faee80bae397a8338a3357e864d77d53" type="tarxz">http://poppler.freedesktop.org/poppler-0.26.5.tar.xz</Archive>

        <BuildDependencies>
            <Dependency type="pkgconfig">libcurl</Dependency>
            <Dependency type="pkgconfig">libpng</Dependency>
            <Dependency type="pkgconfig">freetype2</Dependency>
            <Dependency type="pkgconfig" versionFrom="2.0.0">fontconfig</Dependency>
            <Dependency type="pkgconfig" versionFrom="3.8">gtk+-3.0</Dependency>
            <Dependency type="pkgconfig">gdk-pixbuf-2.0</Dependency>
            <Dependency type="pkgconfig">lcms2</Dependency>
            <Dependency>libtiff-devel</Dependency>
            <Dependency>libjpeg-turbo-devel</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>poppler</Name>
        <Files>
            <Path fileType="library">/usr/lib/lib*.so.*</Path>
            <Path fileType="library">/usr/lib/girepository-1.0</Path>
            <Path fileType="library">/usr/share/gir-1.0</Path>
        </Files>
    </Package>

    <Package>
        <Name>poppler-devel</Name>
        <Summary>Development files for poppler</Summary>
        <Description>Development files for poppler</Description>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="library">/usr/lib/lib*.so</Path>
            <Path fileType="data">/usr/lib/pkgconfig</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">poppler</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>poppler-utils</Name>
        <Summary>Commandline utilities for poppler</Summary>
        <Description>Commandline utilities for poppler</Description>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="man">/usr/share/man/man1</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">poppler</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>poppler-cpp</Name>
        <Summary>Pure C++ wrapper for poppler</Summary>
        <Files>
            <Path fileType="library">/usr/lib/libpoppler-cpp.so*</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">poppler</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>poppler-cpp-devel</Name>
        <Summary>Development files for poppler-cpp</Summary>
        <Files>
            <Path fileType="library">/usr/lib/pkgconfig/poppler-cpp.pc</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">poppler-cpp</Dependency>
            <Dependency release="current">poppler-devel</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>poppler-glib</Name>
        <Summary>Glib wrapper for poppler</Summary>
        <Files>
            <Path fileType="library">/usr/lib/libpoppler-glib.so*</Path>
            <Path fileType="library">/usr/lib/girepository-1.0/Poppler-0.18.typelib</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency>libcairo</Dependency>
            <Dependency>gdk-pixbuf</Dependency>
            <Dependency release="current">poppler</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>poppler-glib-devel</Name>
        <Summary>Development files for poppler-glib</Summary>
        <Files>
            <Path fileType="library">/usr/lib/pkgconfig/poppler-glib.pc</Path>
            <Path fileType="library">/usr/lib/pkgconfig/poppler-cairo.pc</Path>
            <Path fileType="data">/usr/share/gir-1.0/Poppler-0.18.gir</Path>
            <Path fileType="data">/usr/lib32/pkgconfig/poppler-glib.pc</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency>libgtk-2-devel</Dependency>
            <Dependency>libcairo-devel</Dependency>
            <Dependency>gdk-pixbuf-devel</Dependency>
            <Dependency release="current">poppler-glib</Dependency>
            <Dependency release="current">poppler-devel</Dependency>
        </RuntimeDependencies>
    </Package>

